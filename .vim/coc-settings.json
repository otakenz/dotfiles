{
  "languageserver": {
    "go": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "trace.server": "verbose",
      "filetypes": ["go"]
    }
  },

  "coc.preferences.formatOnSave": true,

  "prettier.printWidth": 80,

  "python.formatting.autopep8Args": ["--max-line-length", "80"],

  "pyright.inlayHints.variableTypes": false,

  "flutter.sdk.flutter-lookup": "asdf which flutter",

  "snippets.ultisnips.pythonPrompt": false,

  "clangd.compilationDatabaseCandidates": [
    "${workspaceFolder}/build/compile_commands.json",
    "${workspaceFolder}"
  ],
  "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/17.0.3/clangd_17.0.3/bin/clangd"
}
